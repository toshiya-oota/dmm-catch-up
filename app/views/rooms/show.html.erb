<% @entries.each do |e| %>
  <% if @myUserId != e.user.id %>
      <h2><%= e.user.name %>さんとのトークルーム</h2>
    </div>
  <% end %>
<% end %>
<%= link_to "ユーザー一覧に戻る", users_path %>

   <% if @messages.present? %>
     <% @messages.each do |m| %>
       <% @myUserId == m.user.id  %>
       <p><%= m.user.name %></p>
         <p><%= m.message %></p>
     <% end %>
   <% end %>
   
<%= form_with(model: @message, local: true) do |form| %>
  <%= form.text_field :message, placeholder: "メッセージを入力して下さい", size: 50, class: "form-text-field" %>
  <%= form.hidden_field :room_id, value: @room.id %>
  <%= form.submit "投稿", class: "form-submit" %>
<% end %>